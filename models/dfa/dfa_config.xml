<dfa>
    <!-- natural language description of DFA -->
    <desc>strings ending in 01</desc>
    <!-- comma separated list of symbols in language -->
    <sigma>0,1</sigma>

    <!-- number of states (should match # states in delta) -->
    <num>3</num>

    <!-- single index of start state -->
    <start>0</start>
    <!-- comma separated list of indexes of accept states -->
    <accept>2</accept>

    <!-- transition functions must include all states, even unreachable ones -->
    <!-- num. of q[x] must match <num> tag above -->
    <states>
        
        <q0>
            <trans>
                <input>0</input>
                <output>1</output>
            </trans>
            <trans>
                <input>1</input>
                <output>0</output>
            </trans>
        </q0>
        <q1>
            <trans>
                <input>0</input>
                <output>1</output>
            </trans>
            <trans>
                <input>1</input>
                <output>2</output>
            </trans>
        </q1>
        <q2>
            <trans>
                <input>0</input>
                <output>1</output>
            </trans>
            <trans>
                <input>1</input>
                <output>0</output>
            </trans>
        </q2>
    </states>

</dfa>